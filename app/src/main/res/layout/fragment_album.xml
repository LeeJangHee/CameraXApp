<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="index"
            type="Integer" />
        <variable
            name="viewModel"
            type="com.example.cameraxapp.viewmodel.PictureViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.AlbumFragment">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/add_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_club_option_hint"
                android:layout_width="match_parent"
                android:layout_height="73.3dp"
                android:layout_marginStart="50.7dp"
                android:text="고객이 보유한 클럽의 헤드커버 유무, 브랜드를 확인해 주세요"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/bell"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/album_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="22dp"
                android:clipToPadding="false"
                android:paddingTop="60dp"
                app:layout_constraintBottom_toTopOf="@+id/add_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="99dp"
            android:background="@color/color_003d41"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="12dp"
            android:layout_height="29dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/back_button"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="@+id/back_button" />

        <ImageView
            android:id="@+id/toolbar_check_imageView"
            android:layout_width="48dp"
            android:layout_height="41.3dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/check_off" />

        <TextView
            android:id="@+id/toolbar_check_textView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="확인"
            android:textColor="@color/color_003d41"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_check_imageView"
            app:layout_constraintStart_toStartOf="@+id/toolbar_check_imageView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_check_imageView" />

        <ImageView
            android:id="@+id/toolbar_sign_imageView"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_check_imageView"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_check_imageView"
            app:layout_constraintTop_toTopOf="@+id/toolbar_check_imageView"
            app:srcCompat="@drawable/sign_ch_off" />

        <TextView
            android:id="@+id/toolbar_sign_textView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="2dp"
            android:text="서명받기"
            android:textColor="@color/color_003d41"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_sign_imageView"
            app:layout_constraintStart_toStartOf="@+id/toolbar_sign_imageView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_sign_imageView" />

        <ImageView
            android:id="@+id/toolbar_club_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="31dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_sign_imageView"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_sign_imageView"
            app:layout_constraintTop_toTopOf="@+id/toolbar_sign_imageView"
            app:srcCompat="@drawable/club_ck_off" />

        <TextView
            android:id="@+id/toolbar_club_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클럽체크"
            android:textColor="@color/color_003d41"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_club_imageView"
            app:layout_constraintStart_toStartOf="@+id/toolbar_club_imageView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_club_imageView" />

        <ImageView
            android:id="@+id/toolbar_divide_imageView"
            android:layout_width="20dp"
            android:layout_height="41dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_club_imageView"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_club_imageView"
            app:layout_constraintTop_toTopOf="@+id/toolbar_club_imageView"
            app:srcCompat="@drawable/off" />

        <ImageView
            android:id="@+id/toolbar_option_imageView"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_divide_imageView"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_divide_imageView"
            app:layout_constraintTop_toTopOf="@+id/toolbar_divide_imageView"
            app:srcCompat="@drawable/option_ch_off" />

        <TextView
            android:id="@+id/toolbar_option_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션체크"
            android:textColor="@color/color_003d41"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_option_imageView"
            app:layout_constraintStart_toStartOf="@+id/toolbar_option_imageView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_option_imageView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8장 추가"
            app:layout_constraintBottom_toBottomOf="@+id/add_button"
            app:layout_constraintEnd_toStartOf="@+id/add_button"
            app:layout_constraintTop_toTopOf="@+id/add_button" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="59dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>